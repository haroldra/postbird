.home-screen
  .sidebar
    h4 Saved connections
    ul.connections

  form
    p
      != link_to("Login with heroku", '#', {interaction: 'ligin-heroku'})
    p
      label(for="login_host") Host
      input#login_host(name='host', value='localhost')
    p
      label(for="login_port") Port
      input#login_port(name='port', value='5432')
    p
      label(for="login_username") Username
      input#login_username(name='user', value='pavel')
    p
      label(for="login_password") Password
      input#login_password(name='password', type='password', value='')

    p.buttons
      input(type="submit", value="Connect")
      button#save-and-connect Save & connect

  footer
    a.go-to-help Get Postgres